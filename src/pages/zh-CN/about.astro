---
import { getEntry, render } from 'astro:content';
import BaseHead from '../../components/BaseHead.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import { SITE_TITLE } from '../../consts';

const page = await getEntry('pages-zh-CN', 'about');
if (!page) {
	throw new Error('Simplified Chinese About page not found in content/pages/zh-CN/about.md');
}

const { Content } = await render(page);
---

<!doctype html>
<html lang="zh-CN">
	<head>
		<BaseHead title={`${page.data.title} - ${SITE_TITLE}`} description={page.data.description} />
		<style>
			main {
				width: 960px;
				max-width: calc(100% - 2rem);
				margin: auto;
				padding: 3rem 1rem;
			}
			article {
				color: var(--foreground);
			}
			.prose {
				line-height: 1.8;
			}
			.prose :global(h1) {
				font-size: 2.5rem;
				font-weight: 700;
				margin-bottom: 1.5rem;
			}
			.prose :global(blockquote) {
				margin: 1.5rem 0;
				padding: 1rem 1.5rem;
				border-left: 4px solid var(--accent);
				background: var(--bg-secondary);
			}
			.prose :global(blockquote p) {
				margin: 0.5rem 0;
			}
			.prose :global(a) {
				color: var(--accent);
				text-decoration: none;
			}
			.prose :global(a:hover) {
				text-decoration: underline;
			}
			.prose :global(p) {
				margin: 1rem 0;
			}
			.prose :global(ul) {
				margin: 1rem 0;
				padding-left: 1.5rem;
			}
			.prose :global(li) {
				margin: 0.5rem 0;
			}
		</style>
	</head>
	<body>
		<Header />
		<main>
			<article>
				<div class="prose">
					<Content />
				</div>
			</article>
		</main>
		<Footer />
	</body>
</html>
