---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
---

<!doctype html>
<html lang="zh-CN">
	<head>
		<BaseHead title={`友链 - ${SITE_TITLE}`} description="xzOS 的友情链接页面" />
		<style>
			main {
				width: 720px;
				max-width: calc(100% - 2em);
				margin: auto;
				padding: 3em 1em;
			}
			.prose {
				color: rgb(var(--gray-dark));
			}
			h1 {
				margin-bottom: 1em;
			}
			.links-list {
				list-style-type: none;
				padding: 0;
				margin: 2em 0;
			}
			.links-list li {
				margin-bottom: 1em;
			}
			.links-list a {
				color: rgb(var(--accent));
				text-decoration: none;
				font-size: 1.1em;
			}
			.links-list a:hover {
				text-decoration: underline;
			}
		</style>
	</head>
	<body>
		<Header />
		<main>
			<article>
				<div class="prose">
					<h1>友链</h1>

					<ul class="links-list">
						<li><a href="https://moonbegonia.xyz/" target="_blank" rel="noopener noreferrer">简记</a></li>
						<li><a href="https://www.starx.ink/" target="_blank" rel="noopener noreferrer">Starx's Home</a></li>
						<li><a href="https://e11z.net/" target="_blank" rel="noopener noreferrer">Ran's Blog | 旋律的博客</a></li>
						<li><a href="https://iblog.ren/" target="_blank" rel="noopener noreferrer">星梦的小站（坂本dalao）</a></li>
						<li><a href="https://www.fxsong.xyz/" target="_blank" rel="noopener noreferrer">冯晓松的博客</a></li>
						<li><a href="https://mycroftcooper.github.io/" target="_blank" rel="noopener noreferrer">烤麸的个人学习用博客</a></li>
						<li><a href="https://limu.ltd/" target="_blank" rel="noopener noreferrer">limu</a></li>
						<li><a href="https://blog.i7.homes/" target="_blank" rel="noopener noreferrer">Integral – An Arch Linux User</a></li>
						<li><a href="https://blog.xbss.net/" target="_blank" rel="noopener noreferrer">小白博客</a></li>
						<li><a href="https://blog.coelacanthus.moe/" target="_blank" rel="noopener noreferrer">Coelacanthus</a></li>
						<li><a href="https://flykhan.com/" target="_blank" rel="noopener noreferrer">Flykhan</a></li>
					</ul>
				</div>
			</article>
		</main>
		<Footer />
	</body>
</html>
